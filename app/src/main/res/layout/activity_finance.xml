<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor.FinanceActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/menubutton"
            android:layout_height="@dimen/menubutton"
            android:src="@drawable/ic_chevron_left_24dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finance"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:textSize="@dimen/dashboardlabels"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/margin_appname_tb"
            />
        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/menubutton"
            android:layout_height="@dimen/menubutton"
            app:tint="@color/colorPrimary"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_gravity="center"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/datefetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/divider_margin"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectdate"
            android:id="@+id/month"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:textSize="@dimen/labeltext"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawablePadding="@dimen/margin_appname_tb"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_sqr"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Fetch"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expenseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/divider_margin"
        app:layout_constraintTop_toBottomOf="@+id/datefetch"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectdate"
            android:id="@+id/income"
            android:drawableStart="@drawable/ic_baseline_arrow_drop_up_24"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_arrow_drop_down_24"
            android:textAlignment="center"
            android:text="Fetch"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_money_24"
            android:textAlignment="center"
            android:text="Fetch"/>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/divider_margin"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/expenseView"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>