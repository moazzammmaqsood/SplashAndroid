<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor.ViewClient">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/menubutton"
            android:layout_height="@dimen/menubutton"

            android:src="@drawable/ic_menu_black_24dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client_header"
            android:textSize="@dimen/dashboardlabels"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/margin_appname_tb"/>

        <ImageView
            android:layout_width="@dimen/menubutton"
            android:layout_height="@dimen/menubutton"
            android:src="@drawable/ic_mode_edit_blue_24dp"
            android:layout_gravity="center"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/clientdetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/rcvpaymentbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/labelspacing"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientname_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Moazzam Maqsood"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelspacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientcontact_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientcontact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="923248262087"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelspacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientaddress_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="87/A PIB Colony Karachi"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelspacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientbottles_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientbottles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="45"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelspacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientbottlerate_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientbottlesrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="50"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/labelspacing"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientlastdel_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientlastdel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="02/01/2011"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelspacing"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clientdaysdel_label"
                android:layout_weight="1"
                android:textSize="@dimen/clientlabeltext_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clientdaysdel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2 days"
                android:textSize="@dimen/clientlabeltext_size"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rcvpaymentbtn"
        app:layout_constraintTop_toBottomOf="@id/clientdetails"
        app:layout_constraintBottom_toBottomOf="@id/otheroptions"
        android:paddingLeft="@dimen/buttonpad"
        android:paddingRight="@dimen/buttonpad"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rcv_payment"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_white_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/otheroptions"
        app:layout_constraintTop_toBottomOf="@id/rcvpaymentbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/buttonpad"
        android:paddingRight="@dimen/buttonpad"
        android:paddingTop="15dp"
        android:layout_margin="20dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
 >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery"
            android:textColor="#ffff"

            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_white_24dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/buttonpad"
            android:paddingRight="@dimen/buttonpad"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_red"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disable"
                android:textColor="#ffff"

                android:textStyle="bold"
                android:fontFamily="@font/poppins"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_white_24dp"/>

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>